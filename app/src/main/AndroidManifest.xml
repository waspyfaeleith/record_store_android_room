<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sandy.recordstore">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ArtistsActivity" />
        <activity android:name=".NewArtistActivity" />
        <activity android:name=".EditArtistActivity" />
        <activity android:name=".ViewArtistActivity" />
        <activity android:name=".AlbumsActivity" />
        <activity android:name=".NewAlbumActivity" />
        <activity android:name=".ViewAlbumActivity" />
        <activity android:name=".EditAlbumActivity"></activity>
    </application>

</manifest>