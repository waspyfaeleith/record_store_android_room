<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sandy.recordstore">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.artists.ArtistsActivity" />
        <activity android:name=".activities.artists.NewArtistActivity" />
        <activity android:name=".activities.artists.EditArtistActivity" />
        <activity android:name=".activities.artists.ViewArtistActivity" />
        <activity android:name=".activities.albums.AlbumsActivity" />
        <activity android:name=".activities.albums.NewAlbumActivity" />
        <activity android:name=".activities.albums.ViewAlbumActivity" />
        <activity android:name=".activities.albums.EditAlbumActivity"></activity>
    </application>

</manifest>